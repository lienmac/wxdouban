.indexSwiper{
  width:100%;
  height: 120px;
}
.indexSwiper image{
  width: 100%;
  height: 120px;
}
.indexSwiper repeat{
  position: absolute;
  bottom: 0;
  transform: translateX(-50%);
  left:50%;
}

.movie_tab{
  width: 100%;
  overflow: hidden;
  font-size: .9em;
}
.movie_tab_item{
  float: left;
  width: 50%;
  text-align: center;
  border-bottom-width: 3rpx;
  border-bottom-color: transparent;
  border-bottom-style: solid;
  padding: 15rpx 0;
}
.movie_tab_item.on{
border-bottom-color: #396;
}
