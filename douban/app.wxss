.clearfix:before,.clearfix:after{content:"";display:table}
.clearfix:after{clear:both}
page{font-family:"Helvetica Neue",Helvetica,STHeiTi,Arial,sans-serif;-ms-text-size-adjust:100%;-webkit-text-size-adjust:100%;font-size:62.5%}
/*view{margin:0;font-size:1.4rem;line-height:1.5;color:#333;}*/


.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  /*align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;*/
  box-sizing: border-box;
} 
.movie_list{
  margin-top: 20rpx;
}
.movie_list view{
  padding: 20rpx;
  padding-top: 0;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
  overflow: hidden;
}
.movie_list view:last-child{
  border-bottom: none;
}
.movie_list image{
  float: left;
  width: 60px; 
  height: 100px; 
  background-color: #eeeeee;
  margin-right: 20rpx;
}
.movie_list dl{
  float: left;
  width: 500rpx;
}
.movie_list dl dd{
  display: block;
  font-size: .8em;
  margin-bottom: 10rpx;
}
